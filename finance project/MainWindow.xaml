<Window x:Class="finance_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finance Manager" Height="720" Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <!-- ========== RESOURCES (styles & colors) ========== -->
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BgDark"   Color="#0F172A"/>
        <SolidColorBrush x:Key="Card"     Color="#111827"/>
        <SolidColorBrush x:Key="Card2"    Color="#0B1220"/>
        <SolidColorBrush x:Key="Accent"   Color="#3B82F6"/>
        <SolidColorBrush x:Key="Text"     Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDim"  Color="#94A3B8"/>
        <SolidColorBrush x:Key="Good"     Color="#10B981"/>
        <SolidColorBrush x:Key="Bad"      Color="#EF4444"/>

        <!-- Nav button -->
        <Style x:Key="NavBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1A3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#263B82F6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card container -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#99000000" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Text styles -->
        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
        </Style>
        <Style x:Key="Muted" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <!-- ========== LAYOUT ========== -->
    <Grid Background="{StaticResource BgDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Sidebar ===== -->
        <StackPanel Grid.Column="0" Margin="18">
            <!-- Brand -->
            <Border Style="{StaticResource CardStyle}" Padding="20" Background="{StaticResource Card2}">
                <StackPanel>
                    <TextBlock Text="💰 Finance Manager" Foreground="{StaticResource Text}" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Track expenses • Plan budgets • Meet goals" Style="{StaticResource Muted}" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <!-- Nav (use Margin between buttons) -->
            <StackPanel Margin="0,18,0,0">
                <Button Style="{StaticResource NavBtn}" Click="Home_Click" Margin="0,0,0,8">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Home" VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>

                <Button Style="{StaticResource NavBtn}" Click="Expenses_Click" Margin="0,0,0,8">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Expenses" VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>

                <Button Style="{StaticResource NavBtn}" Click="Budgets_Click" Margin="0,0,0,8">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Budgets" VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>

                <Button Style="{StaticResource NavBtn}" Click="Goals_Click" Margin="0,0,0,8">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Savings Goals" VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>

                <Button Style="{StaticResource NavBtn}" Click="Reports_Click" Margin="0,0,0,8">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Reports" VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>

                <Separator Margin="6"/>

                <Button Style="{StaticResource NavBtn}" Click="Settings_Click">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>
            </StackPanel>

            <StackPanel Margin="0,18,0,0">
                <TextBlock Text="v1.0 – WPF • .NET 8" Style="{StaticResource Muted}"/>
                <TextBlock Text="© Your Name / NIBM" Style="{StaticResource Muted}"/>
            </StackPanel>
        </StackPanel>

        <!-- ===== Main content ===== -->
        <Grid Grid.Column="1" Margin="12,18,18,18">
            <Grid.RowDefinitions>
                <RowDefinition Height="78"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Border Style="{StaticResource CardStyle}" Grid.Row="0" Background="{StaticResource Card2}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="340"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Dashboard" Style="{StaticResource H2}"/>
                        <Border Background="{StaticResource Accent}" CornerRadius="6" Padding="6,2" Margin="8,0,0,0">
                            <TextBlock Text="LIVE" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <!-- Search with watermark (no sys: needed) -->
                    <Border Grid.Column="1" CornerRadius="12" Background="#131A2B" Padding="10"
                            HorizontalAlignment="Right" Width="320">
                        <Grid>
                            <TextBox x:Name="SearchBox" BorderThickness="0" Background="Transparent"
                                     Foreground="{StaticResource Text}" CaretBrush="{StaticResource Text}" FontSize="14"/>
                            <TextBlock Text="Search expenses, budgets, reports..."
                                       Foreground="{StaticResource TextDim}" Margin="4,2,0,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Body -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- KPI Row -->
                <UniformGrid Rows="1" Columns="3" Margin="0,14,0,10">
                    <Border Style="{StaticResource CardStyle}" Margin="8">
                        <StackPanel>
                            <TextBlock Text="This Month Spend" Style="{StaticResource Muted}"/>
                            <TextBlock Text="Rs. 128,540.20" FontSize="28" FontWeight="Bold"
                                       Foreground="{StaticResource Text}" Margin="0,6,0,0"/>
                            <TextBlock Text="↑ 8.2% vs last month" Foreground="{StaticResource Bad}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Budget Used" Style="{StaticResource Muted}"/>
                            <TextBlock Text="72%" FontSize="28" FontWeight="Bold"
                                       Foreground="{StaticResource Text}" Margin="0,6,0,0"/>
                            <TextBlock Text="On track" Foreground="{StaticResource Good}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Savings Progress" Style="{StaticResource Muted}"/>
                            <TextBlock Text="Rs. 45,000 / 100,000" FontSize="28" FontWeight="Bold"
                                       Foreground="{StaticResource Text}" Margin="0,6,0,0"/>
                            <TextBlock Text="Target: Dec 2025" Foreground="{StaticResource TextDim}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Two columns -->
                <Grid Grid.Row="1" Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recent expenses -->
                    <Border Style="{StaticResource CardStyle}" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Recent Expenses" Style="{StaticResource H2}"/>
                            <ListView Margin="0,10,0,0" Height="260" Background="Transparent"
                                      BorderThickness="0" Foreground="{StaticResource Text}">
                                <ListViewItem Content="2025-10-22 • Food &amp; Drinks • Rs. 1,250.00"/>
                                <ListViewItem Content="2025-10-22 • Transport • Rs. 980.00"/>
                                <ListViewItem Content="2025-10-21 • Utilities • Rs. 6,400.00"/>
                                <ListViewItem Content="2025-10-20 • Entertainment • Rs. 2,200.00"/>
                                <ListViewItem Content="2025-10-20 • Groceries • Rs. 5,350.00"/>
                            </ListView>
                            <Button Content="Manage Expenses" Height="38" Width="170" HorizontalAlignment="Right"
                                    Background="{StaticResource Accent}" Foreground="White" BorderThickness="0"
                                    Cursor="Hand" Click="Expenses_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Budgets / Goals -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Budgets &amp; Goals" Style="{StaticResource H2}"/>
                            <ProgressBar Margin="0,10,0,0" Height="14" Value="72" Background="#1A3B82F6"/>
                            <TextBlock Text="Overall Budget Used: 72%" Style="{StaticResource Muted}" Margin="0,6,0,14"/>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="#102563EB" Padding="16" CornerRadius="12" Margin="0,0,16,0">
                                    <StackPanel>
                                        <TextBlock Text="Monthly Budget" Foreground="{StaticResource TextDim}"/>
                                        <TextBlock Text="Rs. 180,000" Foreground="{StaticResource Text}" FontWeight="Bold" FontSize="18"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1010B981" Padding="16" CornerRadius="12">
                                    <StackPanel>
                                        <TextBlock Text="Saved So Far" Foreground="{StaticResource TextDim}"/>
                                        <TextBlock Text="Rs. 45,000" Foreground="{StaticResource Text}" FontWeight="Bold" FontSize="18"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                                <Button Content="View Budgets" Background="{StaticResource Accent}" Foreground="White"
                                        BorderThickness="0" Height="38" Width="140" Cursor="Hand"
                                        Click="Budgets_Click" Margin="0,0,10,0"/>
                                <Button Content="Savings Goals" Background="#183B82F6" Foreground="{StaticResource Text}"
                                        BorderBrush="{StaticResource Accent}" BorderThickness="1"
                                        Height="38" Width="140" Cursor="Hand" Click="Goals_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
